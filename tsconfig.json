{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@entity/*": ["entity/*"],
      "@config/*": ["config/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
